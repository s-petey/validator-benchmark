{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "root": true,
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "!{apps,packages}/**/node_modules/**/*",
      "!{apps,packages}/**/dist/**/*",
      "!{apps,packages}/**/.turbo/**/*"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "lineWidth": 120,
    "indentStyle": "space"
  }
}
